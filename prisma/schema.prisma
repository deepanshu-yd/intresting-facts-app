generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model RequestLog {
  id            String   @id @default(auto()) @map("_id") @db.ObjectId
  userId        String
  topic         String
  responseText  String
  isWarning     Boolean  @default(false)
  warningReason String?
  createdAt     DateTime @default(now())

  @@index([userId, createdAt])
}